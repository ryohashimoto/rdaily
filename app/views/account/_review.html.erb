<div class="panel post">
  <h3><%= link_to review.title, [:account, review] %></h3>
  <p><%= abbrev review.body, 80 %></p>
  <div class="row">
    <div class="large-12 columns">
      <% if review.published_policy.active? %>
        <%= link_to 'Published', unpublish_account_review_path(review), method: :post, class: "small button radius secondary" %>
      <% else %>
        <%= link_to 'Publish', publish_account_review_path(review), method: :post, class: "small button radius success" %>
      <% end %>
      &nbsp;
      <%= link_to 'Edit', edit_account_review_path(review), class: "small button radius" %>
      &nbsp;
      <%= link_to 'Delete', account_review_path(review), method: :delete, class: "small button radius alert", confirm: "Are you sure?" %>
    </div>
  </div>
</div>
