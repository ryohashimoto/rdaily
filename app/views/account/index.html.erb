<% content_for :title do %>
  <% if current_user %>
    <%= rdaily_title('Dashboard') %>
  <% else %>
    <%= rdaily_title('Login') %>
  <% end %>
<% end %>
<% if current_user %>
  <div class="large-9 columns">
    <h2>Dashboard</h2>

    <h3>New Post</h3>

    <p><a href="#" id="toggle_new_post" class="button">Create new post</a></p>

    <div id="new_post" style="display:none;">
      <%= render :partial => 'account/posts/form', :locals => { :post => @post } %>
    </div>
    <h3>Recent Posts</h3>
    <%= render :partial => 'post', :collection => @posts %>
    <%= link_to 'More posts', account_posts_path %>
  </div>
  <div class="large-3 columns">
    <h3>Posts</h3>
    <ul>
      <li><%= link_to 'List', account_posts_path %></li>
      <li><%= link_to 'Create New', new_account_post_path %></li>
    </ul>

    <h3>Categories</h3>
    <ul>
      <li>List</li>
      <li>Create New</li>
    </ul>
    
    <h3>Logout</h3>
    <%= render :partial => 'account/sessions/form_logout' %>
  </div>
<% else %>
  <div class="large-6 columns">
    <h2>Login</h2>
    <%= render :partial => 'account/sessions/form_login' %>
  </div>

  <div class="large-6 column">
    <% if false %>
    <h2>Create your account</h2>
    <%= render :partial => 'account/users/form', :locals => { :user => @user } %>
    <% end %>
  </div>
<% end %>