<%= form_for [:account, page] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :body %>
  <%= f.text_area :body, :style => 'height: 160px;' %>
  <%= f.label :slug %>
  <%= f.text_field :slug, placeholder: 'option' %>
  <%= f.submit class: 'small button success' %>
<% end %>
