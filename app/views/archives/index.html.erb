<div class="row">
  <div class="medium-9 columns">
    <%= render :partial => 'posts/post', :collection => @posts %>
    <div class="pagination">
      <%= paginate @posts %>
    </div>
  </div>
  <div class="medium-3 columns">
    <h2>Archives</h2>
    <% @monthly_posts.sort.reverse.each do |month, posts| %>
    <h4><%=h month.strftime("%B %Y") %></h4>
    <ul style="list-style-type: none;font-size:small;">
      <% posts.each do |post| %>
      <li><%=h link_to post.title, post_path(post) %></li>
      <% end  %>
    </ul>
    <% end %>
  </div>
</div>
