<div class="post">
  <h2><%= link_to post.title, post, style: 'color:#333;' %></h2>
  <p><%= markdown post.body %></p>
  <div class="row">
    <div class="medium-6 columns">
      <p>
        Category:
        <% post.categories.each do |category| %>
          <%= link_to category.name, category %>
        <% end %>
      </p>
    </div>
    <div class="medium-6 columns" style="text-align: right;">
      <div style="float:right;height:48px;">
      <div style="width:120px;height:48px;float:left;">
        <p style="font-size:small;text-align:right;vertical-align:middle;">by <b><%= post.user.name %></b><br>
        <%= post.created_at.strftime("%B %d, %Y") %>
        </p>
      </div>
      <div style="width:60px;float:left;">
        <%= image_tag post.user.gravatar_url, width: 48, height: 48 %>
      </div>
      </div>
    </div>
  </div>
</div>
