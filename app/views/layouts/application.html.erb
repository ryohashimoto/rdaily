<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title><%= content_for?(:title) ? yield(:title) : "Rdaily" %></title>

    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "vendor/modernizr" %>
    <%= csrf_meta_tags %>
    <%= auto_discovery_link_tag :atom, "/feed" %>
    <%= auto_discovery_link_tag :rss, "/feed.rss" %>
  </head>

    <nav class="top-bar" data-topbar>
      <ul class="title-area">
        <li class="name">
          <h1><a href="/">Rdaily</a></h1>
        </li>
        <li class="toggle-topbar menu-icon">
          <a href="#"><span>Menu</span></a>
        </li>
      </ul>
      <section class="top-bar-section">
        <ul class="left">
          <li class="divider"></li>
          <li><a href="/pages/about">About</a></li>
          <li class="divider"></li>
        </ul>
      </section>
    </nav>

    <div class="container">
      <div class="row">
        <div class="twelve columns">
          <% if flash[:error] %>
          <div data-alert class="alert-box alert"><%= flash[:error] %><a href="#" class="close">&times;</a></div>
          <% end %>
          <% if flash[:notice] %>
          <div data-alert class="alert-box"><%= flash[:notice] %><a href="#" class="close">&times;</a></div>
          <% end %>
          <% if flash[:alert] %>
          <div data-alert class="alert-box warning"><%= flash[:alert] %><a href="#" class="close">&times;</a></div>
          <% end %>
          <%= yield %>
        </div>
      </div>
      <div class="row">
        <div class="twelve columns" style="margin-left:24px;">
          <p style="font-size:small;">&copy; 2013 Rdaily all rights reverved.</p>
        </div>
      </div>
    </div>

    <%= javascript_include_tag "application" %>
  </body>
</html>
