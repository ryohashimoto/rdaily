<div class="panel post">
  <div class="row">
    <div class="large-4 columns">
      <%= image_tag review.product.image_url %>
    </div>
    <div class="large-8 columns">
      <h3><%= link_to review.title, [:account, review] %></h3>
      <p><%=review.body %></p>
      <div style="float: right;">
        <div style="width: 100px; float:left;">
          <p style="font-size:small;text-align:right;">by <b><%= review.user.name %></b><br>          
            <%= review.created_at.strftime("%B %d, %Y") %></p>
        </div>
        <div style="width: 60px; float: left;">
          <%= image_tag review.user.gravatar_url, :width => 48, :height => 48 %>
        </div>
      </div>
    </div>
  </div>
</div>